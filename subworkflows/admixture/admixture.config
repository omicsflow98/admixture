profiles {

	base {
		withLabel: 'filter_vcf' {
			memory = 16.GB
			time = '1h'
			cpus = 8
		}

        withLabel: 'plink' {
			memory = 8.GB
			time = '20m'
			cpus = 8
		}

		withLabel: 'admixture' {
			memory = 8.GB
			time = '4h'
			cpus = 16
		}

		withLabel: 'plot_results' {
			memory = 8.GB
			time = '20m'
			cpus = 8
		}

		withLabel: 'iqtree' {
			memory = 32.GB
			time = '6h'
			cpus = 16
		}

		withLabel: 'vcf2phylip' {
			memory = 16.GB
			time = '2h'
			cpus = 8
		}
	}

	slurm {
		process {

			withLabel: 'filter_vcf' {
				clusterOptions = "--account=${params.account} --output=filter_vcf.out --mail-type=END --mail-user=${params.email} --job-name=filter_vcf"	
			}

            withLabel: 'plink' {
				clusterOptions = "--account=${params.account} --output=plink.out --mail-type=END --mail-user=${params.email} --job-name=plink"	
			}

			withLabel: 'admixture' {
				clusterOptions = "--account=${params.account} --output=admixture.out --mail-type=END --mail-user=${params.email} --job-name=admixture"	
			}

			withLabel: 'plot_results' {
				clusterOptions = "--account=${params.account} --output=plot.out --mail-type=END --mail-user=${params.email} --job-name=plot_results"	
			}

			withLabel: 'iqtree' {
				clusterOptions = "--account=${params.account} --output=iqtree.out --mail-type=END --mail-user=${params.email} --job-name=iqtree"	
			}

			withLabel: 'vcf2phylip' {
				clusterOptions = "--account=${params.account} --output=vcf2phylip.out --mail-type=END --mail-user=${params.email} --job-name=vcf2phylip"	
			}
		}
	}

}